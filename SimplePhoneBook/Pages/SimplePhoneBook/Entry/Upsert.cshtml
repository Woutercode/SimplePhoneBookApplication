@page
@model SimplePhoneBook.Pages.SimplePhoneBook.Entry.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(Model.EntryObj.Id != 0)
            {
                <input type="hidden" asp-for="EntryObj.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #ff6a00">
                <h2 class="text-primary">@(Model.CategoryObj.Id!=0 ? "Update" : "Create") Entry</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EntryObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="EntryObj.Name" />
                        <span class="text-danger" asp-validation-for="EntryObj.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EntryObj.PhoneNumber"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="EntryObj.PhoneNumber" />
                        <span class="text-danger" asp-validation-for="EntryObj.PhoneNumber"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="form-row">
                            <div class="col-6">
                                @if (Model.EntryObj.Id != 0)
                                {
                                    <button type="submit" class="btn btn-success form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-dark form-control">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

